    </div>
    {
      posts.map((post) => (
        <Post
          url={post.url as string}
          path={post.file}
          title={post.frontmatter.title}
          desc={post.frontmatter.description}
          date={post.frontmatter.pubDate}
          tags={post.frontmatter.tags}
        />
      ))
    }
  </div>
</BaseLayout>
